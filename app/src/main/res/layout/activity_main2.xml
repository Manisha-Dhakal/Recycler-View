<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700">

    <androidx.cardview.widget.CardView
        android:id="@+id/ImagecircleSecond"
        android:layout_width="wrap_content"
        app:cardCornerRadius="200dp"
        app:cardElevation="10dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="140dp"
        android:elevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/imageSecond"
            android:alpha=".80"
            android:src="@drawable/head" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha=".80"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/cardviewcontactsecond"
        android:layout_below="@+id/ImagecircleSecond">


        <TextView
            android:id="@+id/carviewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="50dp"
            android:text="hello"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardviewphonenumber"
            android:layout_marginTop="80dp"
            android:layout_marginStart="100dp"
            android:textSize="20sp"
            android:text="+977 99836274627"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/phonecall"
            android:layout_marginStart="70dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:src="@drawable/phonecall" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/videocall"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:src="@drawable/videocamera" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/messege"
            android:layout_marginStart="180dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:src="@drawable/messegebox" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>