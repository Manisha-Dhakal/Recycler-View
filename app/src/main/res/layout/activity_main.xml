<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/Imagecircle"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="140dp"
        android:elevation="10dp"
        app:cardCornerRadius="200dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:alpha=".80"
            android:src="@drawable/head" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manisa"
        android:text="MANISA"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Imagecircle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manisa"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/A"
        android:textSize="20sp"
        android:text="A"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactphoneA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/A"
        android:alpha=".80" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactphoneA"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/B"
        android:textSize="20sp"
        android:text="B"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactphoneB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B"
        android:alpha=".80" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactphoneB"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/C"
        android:textSize="20sp"
        android:text="C"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactphoneC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/C"
        android:alpha=".80" />

</RelativeLayout>